<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        >

        <TextView
            android:id="@+id/title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="多米音乐"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="#00C5CD" />

        <ImageView
            android:id="@+id/title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/appimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@+id/appimage"
            android:text="多米" />
        <TextView
            android:id="@+id/appcompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/appname"
            android:layout_below="@+id/appname"
            android:text="作者：多米音乐" />

        <TextView
            android:id="@+id/Issuedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/appcompany"
            android:layout_below="@+id/appcompany"
            android:text="发行日期：2013-02-26" />
         </RelativeLayout>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/versions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_below="@+id/appimage"
            android:layout_marginRight="15dp"
            android:singleLine="false"
            android:text=" 版本：4.0" />
        
        <TextView
            android:id="@+id/publishdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_below="@+id/versions"
            android:layout_marginRight="15dp"
            android:singleLine="false"
            android:text=" 发布日期：2012.4.1" />
        
        <TextView
            android:id="@+id/platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_below="@+id/publishdate"
            android:layout_marginRight="15dp"
            android:singleLine="false"
            android:text=" 应用平台：windows" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/uninstall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="228dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/music10"
            android:visibility="gone"
            android:text="已安装" />
          <Button
            android:id="@+id/install"
            android:layout_width="wrap_content"
               android:layout_marginLeft="228dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/uninstall"
            android:layout_below="@+id/music10"
            android:text="下载" />
            </RelativeLayout>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="热门推荐"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
    
        />
      
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" >

        <ImageView
            android:id="@+id/apprecommend1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/apprecommend2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/apprecommend1"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/apprecommend1"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/apprecommend3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/apprecommend2"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/apprecommend2"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/apprecommend4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/apprecommend1"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/apprecommend1"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/apprecommend5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/apprecommend3"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/apprecommend3"
            android:src="@drawable/ic_launcher" />
        
    </RelativeLayout>

</LinearLayout>