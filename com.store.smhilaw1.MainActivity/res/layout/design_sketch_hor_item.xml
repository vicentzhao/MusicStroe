<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ring_box_selector"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ItemIcon"
        android:layout_width="190dip"
        android:layout_height="110dip"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/item_hor_bg_loading" >
    </ImageView>

    <TextView
        android:id="@+id/ItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ItemIcon"
        android:layout_alignRight="@+id/ItemIcon"
        android:layout_below="@+id/ItemIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dip"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="24dip" >
    </TextView>

    <ImageView
        android:id="@+id/lightcorner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ItemIcon"
        android:layout_alignLeft="@+id/ItemIcon"
        android:layout_alignRight="@+id/ItemIcon"
        android:layout_alignTop="@+id/ItemIcon"
        android:scaleType="fitXY"
        android:src="@drawable/angle_light" />

</RelativeLayout>