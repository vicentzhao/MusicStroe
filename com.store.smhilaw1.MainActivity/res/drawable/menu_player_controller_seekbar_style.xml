<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
                <corners android:radius="90dip" /><gradient
                android:angle="0"
                android:centerColor="#80000000"
                android:centerY="0.45"
                android:endColor="#80000000"
                android:startColor="#80000000" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="90dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="#6B4226"
                    android:centerY="0.45"
                    android:endColor="#6B4226"
                    android:startColor="#6B4226" />
            </shape>
        </clip>

    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="90dip" />

                <gradient
                    android:angle="0"
                    android:startColor="#D8D8BF" 
                    android:centerColor="#D8D8BF"
                    android:endColor="#D8D8BF"
                    android:centerY="0.45"/>
            </shape>
        </clip>
    </item>

</layer-list>